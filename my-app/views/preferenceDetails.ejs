<!-- Display Movie Preference Changing -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Preference Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            color: #333;
            margin-bottom: 20px;
        }
        .details-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
            margin-bottom: 20px;
        }
        .details-container p {
            margin: 10px 0;
            color: #555;
        }
        .details-container p strong {
            color: #333;
        }
        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
            margin-bottom: 20px;
        }
        form label {
            display: block;
            margin: 10px 0 5px;
            color: #333;
        }
        form input {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        form button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        form button:hover {
            background-color: #0056b3;
        }
        a {
            display: inline-block;
            margin-top: 20px;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        a:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Movie Preference Details</h1>
    <div class="details-container">
        <p><strong>Title:</strong> <%= preference.movieTitle %></p>
        <p><strong>Genre:</strong> <%= preference.genre %></p>
        <p><strong>Rating:</strong> <%= preference.rating %></p>
    </div>
    
    <h2>Update Movie Preference</h2>
    <form action="/<%= preference.id %>/update" method="post">
        <label for="movieTitle">Movie Title:</label>
        <input type="text" name="movieTitle" value="<%= preference.movieTitle %>" required>
        <label for="genre">Genre:</label>
        <input type="text" name="genre" value="<%= preference.genre %>" required>
        <label for="rating">Rating:</label>
        <input type="number" name="rating" value="<%= preference.rating %>" required>
        <button type="submit">Update</button>
    </form>
    <a href="/">Back to Home</a>
</body>
</html>
